{
  "manifest_version": 3,
  "name": "Email Thread Notes",
  "version": "2.1.2",
  "description": "Add private, persistent notes to email threads in Gmail and Outlook",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel"
  ],
  
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office365.com/*",
    "https://outlook.office.com/*",
    "https://outlook.live.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["src/gmail-sidebar.js"]
    },
    {
      "matches": [
        "https://outlook.office365.com/*",
        "https://outlook.office.com/*",
        "https://outlook.live.com/*"
      ],
      "js": ["src/outlook-sidebar.js"]
    }
  ],
  
  "background": {
    "service_worker": "src/background.js"
  },
  
  "action": {
    "default_title": "Email Thread Notes"
  },
  
  "side_panel": {
    "default_path": "src/sidebar.html"
  },
  
  "icons": {
    "64": "assets/icons/icon_64x64.png",
    "48": "assets/icons/icon_48x48.png",
    "128": "assets/icons/icon_128x128.png"
  }
}